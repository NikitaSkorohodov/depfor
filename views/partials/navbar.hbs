<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Navbar Example</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <style>
    /* Основные стили навбара */
    button:focus {
    outline: none;
    background-color:#44025e; 
}
    .nav2 {
        color: #fff;
        background-color: #44025e;
        width: 100%;
        height: 106px;
        line-height: 106px;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 20px;
    }

    .brand-logo img {
        width: 90px;
        height: 90px;
        border-radius: 50%;
        margin-top: 39px;
    }

    .nav-links {
        display: flex;
        list-style: none;
        margin: 0;
        padding: 0;
        align-items: center;
    }

    .nav-links li {
        margin: 0 15px;
        display: flex;
        align-items: center;
    }

    .nav-links a {
        color: #fff;
        text-decoration: none;
        font-size: 16px;
        font-weight: bold;
        transition: color 0.3s ease, transform 0.3s ease;
    }

    .nav-links a:hover,
    .nav-links a.active {
        color: #ffeb3b;
        transform: scale(1.1);
    }

    .circle-search img,
    .circle-img img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        vertical-align: middle;
        margin-top: 10px;
    }

    @media only screen and (max-width: 992px) {
    .nav-links {
        display: none;
    }

    .nav-toggle {
        display: block;
        cursor: pointer;
        color: #fff;
        font-size: 24px;
        background: none;
        border: none;
    }

    .nav-links.show {
        display: flex;
        flex-direction: column;
        position: absolute;
        top: 106px;
        left: 0;
        background-color: #44025e;
        width: 100%;
        padding: 10px 0;
        line-height: 1.2; /* Уменьшение расстояния между строками */
    }

    .nav-links li {
        margin: 23px 0; /* Уменьшение отступов между элементами списка */
    }
}

    body {
        margin: 0;
        padding-top: 106px;
    }
    
  </style>
</head>
<body>
  <nav class="nav2">
    <button class="nav-toggle">&#9776;</button> <!-- Кнопка для мобильного меню -->
    <a href="/" class="brand-logo">
      <img src="https://img.ws.mms.shopee.co.id/id-11134216-7r98p-lmzd9ylmr6e7be" alt="App Logo">
    </a>
    <ul id="nav-mobile" class="nav-links">
      <li>
        <a href="/products/search?q=JavaScript" class="circle-search">
          <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/bd/VisualEditor_-_Icon_-_Search-big_-_white.svg/1200px-VisualEditor_-_Icon_-_Search-big_-_white.svg.png" alt="Search">
        </a>
      </li>
      <!-- Dynamically rendered menu items -->
      {{#if user}}
        {{#if isAdmin}}
          {{#if isAdd}}
            <li class="active"><a href="/add">{{__ 'ADD PRODUCTS'}}</a></li>
          {{else}}
            <li><a href="/add">{{__ 'ADD PRODUCTS'}}</a></li>
          {{/if}}

          {{#if isCourses}}
            <li class="active"><a href="/products/ed">{{__ 'Edit'}}</a></li>
          {{else}}
            <li><a href="/products/ed">{{__ 'Edit'}}</a></li>
            <li><a href="/auth/create-admin">{{__ 'Create new admin'}}</a></li>
            <li><a href="/orders/all-orders">{{__ 'ALL ORDERS'}}</a></li>
          {{/if}}
        {{/if}}
      {{/if}}
      {{#if isCourses}}
        <li class="active"><a href="/products">{{__ 'PRODUCTS'}}</a></li>
      {{else}}
        <li><a href="/products">{{__ 'PRODUCTS'}}</a></li>
      {{/if}}
      

      {{#if isAdd}}
        <li class="active"><a href="/auth/register">{{__ 'REGISTER'}}</a></li>
      {{else}}
        <li><a href="/auth/register">{{__ 'REGISTER'}}</a></li>
      {{/if}}

      {{#if isAdd}}
        <li class="active"><a href="/auth/login">{{__ 'LOGIN'}}</a></li>
      {{else}}
        <li><a href="/auth/login">{{__ 'LOGIN'}}</a></li>
      {{/if}}

      {{#if isAdd}}
        <li class="active"><a href="/auth/logout">{{__ 'LOG OUT'}}</a></li>
      {{else}}
        <li><a href="/auth/logout">{{__ 'LOG OUT'}}</a></li>
      {{/if}}

      {{#if isCard}}
        <li class="active"><a href="/card"><i class="material-icons">shopping_cart</i></a></li>
      {{else}}
        <li><a href="/card"><i class="material-icons">shopping_cart</i></a></li>
      {{/if}}

      {{#if isAdd}}
        <li class="active"><a href="/favorites">{{__ '♥'}}</a></li>
      {{else}}
        <li><a href="/favorites">{{__ '♥'}}</a></li>
      {{/if}}

      <li>
        <a href="/?lang=en" class="circle-img">
          <img src="https://s2.qwant.com/thumbr/474x237/e/b/5eb6584fba7b7c72464b9658ade58d510f27222e1a63b565599c39596dc274/th.jpg?u=https%3A%2F%2Ftse.mm.bing.net%2Fth%3Fid%3DOIP.yuFjx7jkfs44XcVdsQ8c5wHaDt%26pid%3DApi&q=0&b=1&p=0&a=0" alt="English">
        </a>
      </li>
      <li>
        <a href="/?lang=et" class="circle-img">
          <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/8f/Flag_of_Estonia.svg/220px-Flag_of_Estonia.svg.png" alt="Estonian">
        </a>
      </li>
    </ul>
  </nav>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
        const navToggle = document.querySelector('.nav-toggle');
        const navLinks = document.querySelector('.nav-links');

        navToggle.addEventListener('click', function() {
            navLinks.classList.toggle('show');
        });
    });
  </script>
</body>
</html>
